# ==================== 应用基础配置 ====================
# 应用名称
APP_NAME=Windify
# 应用版本
APP_VERSION=0.1.0
# 调试模式（生产环境设置为 False）
DEBUG_MODE=True

# ==================== 服务器配置 ====================
# 服务器主机
HOST=127.0.0.1
# 服务器端口
PORT=8000
# 是否启用热重载（开发环境建议 True）
RELOAD=True

# ==================== 文件配置 ====================
# 静态文件目录
STATIC_DIR=static
